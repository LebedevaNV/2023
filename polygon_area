#include <iostream>
#include <cmath>
using namespace std;

int main() {
    int n;
    cout << "Введите количество вершин многоугольника: ";
    cin >> n;

    double xn, yn;
    cout << "Введите координаты вершин многоугольника:\n";
    for (int i = 0; i < n; i++) {
        cout << "x" << i << " = ";
        cin >> xi;
        cout << "y" << i << " = ";
        cin >> yi;
    }

    double s = 0;
    for (int i = 0; i < n; i++) {
        int j = (i + 1) % n;
        s += xi  y[j] - x[j]  yi;
    }
    s = abs(s) / 2;

    cout << "Площадь многоугольника: " << s << endl;

    return 0;
}
